{
  "extends": [
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/flowtype"
  ],
  "plugins": ["flowtype", "prettier", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 120,
        "semi": false,
        "parser": "flow"
      }
    ]
  },
  "env": {
    "jest": true
  }
}